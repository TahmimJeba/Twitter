<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/signIn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:onClick="click"
        android:enabled="true"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/enterPinButton" />

    <EditText
        android:id="@+id/enterPin"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the PIN"
        android:layout_below="@+id/signIn"
        android:layout_alignParentStart="false"
        android:layout_marginTop="52dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/enterPinButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:onClick="getAccessToken"
        android:layout_below="@+id/enterPin"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/enterPinButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:src="@drawable/twitter" />


</RelativeLayout>
